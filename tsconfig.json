{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ESNext",
        "moduleResolution": "Node",
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "./",
        "strict": true,
        "types": ["node", "express", "./custom.d.ts"],
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
}